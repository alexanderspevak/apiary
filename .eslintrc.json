{
  "env": {
    "es6": true,
    "jest/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": "standard",
  "plugins": [
    "standard",
    "promise",
    "react",
    "jest"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-unneeded-ternary": "off"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "no-unused-vars": ["off"],
        "no-undef": ["off"]
      }
    }
  ],
  "globals": {
    "GRAPHQL_ENDPOINT": false,
    "FileReader": false
  }
}
